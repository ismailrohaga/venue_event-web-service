generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Venue {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String?
  location    String?
  city        String   @db.Char(3)
  phone       String?
  published   Boolean  @default(false)
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  phone    String? @unique
  password String
}
